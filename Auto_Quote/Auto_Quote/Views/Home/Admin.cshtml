@using Auto_Quote.ViewModels
@model List<AdminVM>

<center><h1>Tech Academy Auto Insurance</h1></center>
<center><h1>Quotes Admin</h1></center>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email Address</th>
            <th scope="col">Quote Amount</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var quote in Model)
        {
            <tr>
                <th scope="row">@quote.Id</th>
                <td>@quote.FirstName</td>
                <td>  @quote.LastName</td>
                <td>  @quote.EmailAddress</td>
                <td>@quote.QuoteAmount</td>
            </tr>
        }
    </tbody>
</table>
